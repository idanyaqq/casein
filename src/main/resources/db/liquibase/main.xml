<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="user table creation" author="redin" dbms="mysql">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="username" type="VARCHAR"/>
            <column name="password" type="VARCHAR"/>
            <column name="description" type="LONGTEXT"/>
            <column name="creation_date" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP"/>
            <column name="last_login_date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
    
    <changeSet id="user roles table creation" author="redin">
        <createTable tableName="roles">
            <column name="id" type="INTEGER" autoIncrement="true"/>
            <column name="role" type="VARCHAR"/>
        </createTable>
    </changeSet>

    <changeSet id="users to roles table creation" author="redin" dbms="mysql">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT"/>
            <column name="role_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>